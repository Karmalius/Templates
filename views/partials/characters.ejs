<div class="info">
  <br />
  <h1>Characters</h1>
  <br />
  <p>Here are some main characters in Rick and Morty -series</p>
  <br />
</div>
<div id="place" class="place"></div>
<script>
    // Tallennetaan APIn url muuttujaan.
    var url = "https://rickandmortyapi.com/api/character";
    // Suoritetaan AJAX pyyntö ja lisätään funktio: Kun saadaan vastaus pyyntöön...
    $.get(url, function (data) {
      // Luodaan out muuttuja johon tallennetaan html table tägi ja taulukon sarakkeiden otsikot.
      var out =
        //"<table class='table'><tr><th>Image</th><th>Name</th><th>Species</th><th>Gender</th></tr>";
          "<div>"
      // For loopilla käydään objekti läpi sen koko pituudelta.
      for (i = 0; i < data.results.length; i++) {
        // Joka kierroksella lisätään muuttujaan tr tägi jolla aloitetaan rivi.
        out += "<div class='card' style='width: 18rem;''><img src='" + data.results[i].image + "' class='card-img-top' alt='" + data.results[i].name+ "'>"
        out += "<div class='card-body'>"
        out += "<h5 class='card-title'>" + data.results[i].name + "</h5>"
        out += "<p class='card-text'>Species: " + data.results[i].species + "\nGender: " + data.results[i].gender+ "</p>" 
        out += "</div>"
        //out += "<tr>";
        // Joka kierroksella lisätään muuttujaan td tägi jolla tehdään solu. Haetaan onjektista haluttu data.
        //out += "<td><img src='" + data.results[i].image + "' class='img-circle' width='180px'></td>";
        //out += "<td>" + data.results[i].name + "</td>";
        //out += "<td>" + data.results[i].species + "</td>";
        //out += "<td>" + data.results[i].gender + "</td>";
        // Joka kierroksella lisätään muuttujaan tr tägi jolla suljetaan rivi.
        //out += "</tr>";
      }
      // Suljetaan table elementti html table tägillä.
      out += "</div>";
      // Vaihdetaan houseInfo -elementin html sisällöksi out -muuttuja, jossa on APIsta haettu data taulukossa.
      $("#place").html(out);
    });
</script>
